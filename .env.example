# Required
GWS_MASTER_KEY=your-master-key-here-use-64-hex-chars-for-production
GWS_POSTGRES_PASSWORD=your-secure-password-here
GWS_POSTGRES_USER=gws_mcp
GWS_POSTGRES_DB=gws_mcp

# Google OAuth (required for OAuth flow)
GWS_GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GWS_GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# Optional
GWS_PORT=3000
GWS_API_KEY_MODE=user_bound
GWS_REDIRECT_URI_ALLOWLIST=https://chatgpt.com/,https://chat.openai.com/,localhost,127.0.0.1
GWS_REDIRECT_URI_ALLOWLIST_MODE=prefix
GWS_CODE_TTL_SECONDS=90
GWS_TOKEN_TTL_SECONDS=3600

# Development Settings (set to true for localhost testing)
GWS_OAUTH2_ALLOW_INSECURE_TRANSPORT=false
GWS_OAUTH2_ENABLE_DEBUG=false

# Legacy Compatibility (recommended during migration)
GWS_OAUTH2_ENABLE_LEGACY_AUTH=true
